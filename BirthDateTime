import java.util.Scanner;

public class BirthDateTime
{
    public static void main(String[] args)
    {
        Scanner in = new Scanner(System.in);
        int year = 0;
        int month = 0;
        int day = 0;
        int hours = 0;
        int minutes = 0;
        int daysInMonth = 0;

        // Get Year (1950-2015)
        year = SafeInput.getRangedInt(in, "Enter your birth year", 1950, 2015);

        // Get Month (1-12)
        month = SafeInput.getRangedInt(in, "Enter your birth month", 1, 12);

        // Use switch to determine the correct number of days for the month [cite: 142]
        switch (month)
        {
            case 2: // February
                daysInMonth = 29; // Allows for 29 days (as suggested by lab hint)
                break;
            case 4: // April
            case 6: // June
            case 9: // September
            case 11: // November
                daysInMonth = 30;
                break;
            default: // January, March, May, July, August, October, December
                daysInMonth = 31;
                break;
        }

        // Get Day (Range depends on the month)
        day = SafeInput.getRangedInt(in, "Enter your birth day", 1, daysInMonth);

        // Get Hours (1-24)
        hours = SafeInput.getRangedInt(in, "Enter your birth hour", 1, 24);

        // Get Minutes (1-59)
        minutes = SafeInput.getRangedInt(in, "Enter your birth minute", 1, 59);

        System.out.println("\n--- Birth Date and Time ---");
        System.out.printf("Birth Date: %d/%d/%d\n", month, day, year);
        System.out.printf("Birth Time: %02d:%02d\n", hours, minutes);
    }
}
